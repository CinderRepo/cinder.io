@import 'nib'
@import '../variables'

.iconWrapper
  height inherit
  width inherit
  //cursor pointer
.icon
  height inherit
  width inherit
  -webkit-user-select none
  position(absolute)
  display block //Prevents the icon from being treated like a text element when aligning text
//XXX: Fix Icons after launch party
.icon > *
  fill midnight()
.icon:hover > *,
.icon:focus > *
  fill midnight()