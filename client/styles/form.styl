.formInput
  background rgba(225,225,225,0.9)
  border-radius 4px
  color rgba(45,45,45,0.5)
  box-shadow none
  font-size 16px
  padding 10px 20px 10px 20px
  color midnight(0.9)
  width inherit
  height 60px
  //line-height 60px
.formRadioList
  display inline-block
  margin 0 auto 0 auto
  .formRadioListItem
    size(70,110)
    font-size 20px
    float left
    margin 0 20px 10px 0
    position(relative)
    .iconWrapper
      size(70,70)
      position(absolute,0,auto,auto,auto)
    .formRadioText
      color midnight(0.5)
      position(absolute,auto,0,0,0)
      text-align center
      white-space nowrap
      text-overflow ellipsis
      overflow hidden
    &:last-child
      margin 0 0 10px 0
    .formRadio
      position(absolute,0,0,0,0)
      z-index 1
      background transparent
      cursor pointer
      &:checked, &:hover, &:focus
        background transparent
        ~ .iconWrapper
          .icon > *
            fill midnight(0.9)
        ~ .iconWrapper ~ .formRadioText
          color radiantBlue(0.9)
.formSubmit
  width 100%
  height 60px
  background midnight(0.5)
  color white(0.9)
  border-radius 4px
  margin 40px 0 0 0
  cursor pointer
  font-size 18px
  text-transform uppercase
  &:hover
    background midnight(0.9)
    color radiantBlue(0.9)