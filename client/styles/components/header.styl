@import 'nib'
@import '../variables'

#header
  position(fixed,20,20,auto,20)
  z-index 2
  margin 0 auto
  minSize(400,40)
  size(auto,40)
  maxSize(auto,40)
.headerList
  size(auto,inherit)
  position(absolute,auto,auto,auto,auto)
  centerText(40)
  &.left
    left 0
  &.right
    right 0
    &:after
      content ""
      minSize(300,0)
      size(300,0)
      maxSize(300,0)
      position(absolute,auto,0,0,auto)
      border-bottom 1px solid white(0.9)
.headerItem
  float left
  size(auto,inherit)
  padding 0 10px 0 10px
  &:first-child
    padding 0 10px 0 0
  &:last-child
    padding 0 0 0 10px