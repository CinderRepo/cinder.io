@import 'nib'
@import 'variables'

#header
  position(fixed,20,0,auto,0)
  z-index 1
  margin 0 auto
  minSize(400,40)
  size(auto,40)
  maxSize(640,40)
  whiteTheme(0.9)
  box-shadow 0 0 2px midnight(0.2)
#headerList
  size(auto,inherit)
  centerText(40)
.headerItem
  float left
  size(auto,inherit)
  padding 0 10px 0 10px