@import 'nib'
@import '../variables'

#viewContentBackdrop
  position(fixed,0,0,0,0)
  background rgba(0,0,0,0.7)
#viewContentWallpaper
  position(fixed,0,0,0,0)
  background-position 50% 50%
  background-repeat no-repeat
  background-size cover
  background-color rgba(0,0,0,0.7)
  filter blur(40px)
  -webkit-filter blur(40px)
  opacity 0.8
  &:after
    content ""
    position(fixed,0,0,0,0)
    background-image linear-gradient(top, rgba(255,255,255,0) 0%, rgba(145,145,145,0.5) 100%)
#viewContent
  position(relative,0)
  center(70px)
  justify-content center
  padding 0
.contentMasthead
  whiteTheme(0.9)
  minSize(640,40)
  size(640,40)
  maxSize(640,40)
  center(20)
.publishContentInfo
  position(fixed,20,20,auto,auto)
  whiteTheme(0.9)
  minSize(40,40)
  size(40,40)
  maxSize(40,40)
  border-radius 40px
  cursor pointer
  z-index 2
  display none
.addContentInfo
  position(fixed,20,80,auto,auto)
  whiteTheme(0.9)
  minSize(40,40)
  size(40,40)
  maxSize(40,40)
  border-radius 40px
  cursor pointer
  z-index 2
  display none

.contentInfoEditor
  position(absolute,0,0,0,0)
  background transparent
  left 50%