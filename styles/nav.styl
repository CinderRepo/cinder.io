@import 'nib'
@import 'palette'

.nav
	position fixed
	top 0
	left 0
	right 0
	z-index 100
	height 80px
	padding 20px
	background clouds
.nav .circleButton
	position absolute
	top 5px
.nav .circleButton:nth-of-type(1)
	left 100px
.nav .circleButton:nth-of-type(2)
	right 100px
.nav .dualButtonWrapper
	position absolute
	left 50%
	margin-left -100px
.nav #modal
	margin 0
	position absolute
	top 80px
	right 0
	left 0