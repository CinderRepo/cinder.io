@import 'nib'
@import 'palette'

//Main Styles
#perspectiveWrapper
	position absolute
	top 0
	right 0
	bottom 0
	left 0
	perspective 0
	transform-style flat
	transform translateZ(-999999px)
	perspective-origin 50% 50%
	backface-visiblity hidden
#paneWrapper
	position absolute
	top 80px
	right 0
	bottom 0
	left 0
	transition top slowSpeed, opacity slowSpeed, transform slowSpeed
	//background darkestGrey
	perspective 100
	pointer-events none
	//transform scale3d(1,1,1)

//Modal States
.pane
	position absolute
	top 0
	right 10px
	bottom 0
	left 10px

//Tiles Styles
.tilesBackground
	position absolute
	top 400px
	right 20px
	bottom 0
	left 20px
	transition opacity slowSpeed, transform slowSpeed
	transform scale3d(1,1,1)
	background clouds
#paneWrapper[data-state="play"] .tilesBackground
	opacity 0
	transform scale3d(0,0,0)
	pointer-events none
.tilesContainer
	position absolute
	top 0
	right 0
	bottom 0
	left 0
	//background darkestGrey
	perspective 100px
	perspective-origin 50% 50%
	perspective-origin 0 0
	transform-style preserve-3d
	backface-visibility hidden

//Game Player Styles
#gamePlayer
	position absolute
	top 0
	right 0
	bottom 0
	left 0
	overflow hidden
#gamePlayerContent
	width 100%
	height 100%
	border 0
#canvas
	//background black
	//width 100%
	//height 100%
	position absolute
	top 0
	left 0
	pointer-events none
	z-index 100
	//height 100%
	//width 100%
	//right 0
	//left 0
	//bottom 0
	//margin-left -400px
	//width 800px
	//height 600px
	//width 50%
	//height 50%
#canvas::selection
	background transparent

//Masthead
#masthead
	position fixed
	top 80px
	right 0
	left 0
	height 400px
	z-index 100
	border-bottom 20px solid clouds
	background clouds
#activeGame
	position absolute
	top 0
	right 0
	bottom 0
	left 0
	background-size cover
	background-position 50% 50%
#activeGame:after
	content ''
	position absolute
	top 0
	right -10px
	bottom 0
	left -10px
	box-shadow inset 0 0 3px 0 midnightBlue
#activeGameName
	position absolute
	top 20px
	left 20px
	color clouds
	font-size 48px
	text-shadow 0 2px 2px midnightBlue
.button[data-state="view"]
	position absolute
	height 40px
	line-height 40px
	width 150px
	right 20px
	bottom 20px
	z-index 99
	color clouds
.button[data-state="play"]
	position absolute
	top 30px
	left 50%
	margin-left -25px
	width 50px
	min-height 50px
	border-radius 50px
	line-height 50px
	background rgba(0,0,0,0.4)
	z-index 99
#controls
	width 190px
	height 40px
	position absolute
	bottom -10px
	left 50%
	margin-left -95px
	display none
.control
	float left
	margin 5px 10px 0 0
.control:last-child
	margin-right 0

//Genre Styles
