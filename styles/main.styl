//Tile Container Styles
#tiles
	margin 0 auto
	background clouds
	height 100%
	position relative
	z-index 1
	transition transform normalSpeed

#tilesWrapper
	width 800px
	//background red
	margin 0 auto
	position relative
	padding 80px 0 20px 0
#tilesWrapper:after
	content ''
	display table
	clear both

//ONE COLUMN LAYOUT
@media only screen and (max-width : 800px)
	#tilesWrapper
		width 400px

//TWO COLUMN LAYOUT
@media only screen and (min-width : 801px) and (max-width : 1200px)
	#tilesWrapper
		width 800px

//THREE COLUMN LAYOUT
@media only screen and (min-width : 1201px) and (max-width : 1600px)
	#tilesWrapper
		width 1200px

//FOUR COLUMN LAYOUT
@media only screen and (min-width : 1601px) and (max-width : 2000px)
	#tilesWrapper
		width 1600px

//FIVE COLUMN LAYOUT
@media only screen and (min-width : 2001px) and (max-width : 2400px)
	#tilesWrapper
		width 2000px

//SIX COLUMN LAYOUT
