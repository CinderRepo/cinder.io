@import 'nib'
@import 'variables'

//Container Styles
#container
	width 100%
	height 100%
	overflow-x hidden
	overflow-y scroll

//Tile Container Styles
#tiles
	width 100%
	height 100%
	padding 90px 10px 10px 10px
	transition opacity normalSpeed
	position relative
	z-index 1
#tilesWrapper
	margin 0 auto
	position relative
#tilesWrapper:after
	content ''
	display table
	clear both

//View Styles
#viewBg
	position fixed
	background-position 50% 50%
	//background-attachment fixed
	background-size cover
	background-repeat no-repeat
	top 0
	right 0
	bottom 0
	left 0
	z-index 1
	opacity 0
	transition opacity normalSpeed
	pointer-events none
#view
	width 100%
	height 100%
	position absolute
	top 0
	z-index 2
	opacity 0
	transition opacity normalSpeed
	pointer-events none
#view .tile
	position absolute
	top 50%
	left 50%
	margin -190px 0 0 -200px
#view .tileWrapper
	background-image none!important
#view .tileInfo
	transform translate3d(0,-(tileHeight - (tileInfoHeaderHeight + 20)),0)
#view .tileInfoContent
	opacity 1
.scrollIndicator
	width scrollIndicatorWidth
	height scrollIndicatorHeight
	background red
	absolute bottom 40px left 50%
	margin-left -(scrollIndicatorWidth/2)
	cursor pointer
	opacity 0

//Game Styles
#game
	position fixed
	top 0
	right 0
	bottom 0
	left 0
	z-index 1
	opacity 0
	transition opacity normalSpeed
	pointer-events none
	background clouds
#gameWrapper
	position absolute
	top 80px
	right 0
	bottom 0
	left 0
#gamePlayer
	width 100%
	height 100%

//Community Styles
#community
	position absolute
	top 0
	right 0
	left 0
	z-index 3
	opacity 0
	transition opacity normalSpeed
	pointer-events none
	padding 0 0 20px 0
#communityWrapper
	padding 90px 10px 0 10px
	margin 0 auto
#messages
	float left
	width 100%
	min-height 100px
	background clouds
	color midnightBlue
	//padding 0 0 100px 0
.noMessagesNotice
	text-align center
	height 100px
	width 600px
	font-size 42px
	line-height 100px
	text-shadow none
	margin 0 auto

//Handle Application States
#container[data-state="view"],
#container[data-state="play"]
	//We disable pointer events on the container so that the browse page doesn't scroll anymore.
	pointer-events none
#container[data-state="view"] #nav,
#container[data-state="play"] #nav
	//We still want pointer events when the user clicks on the navigation however, so we enable it here.
	pointer-events auto
#container[data-state="view"] #tiles,
#container[data-state="play"] #tiles
	//Prevent the user from accidentally clicking or scrolling the tiles page
	opacity 0
	pointer-events none
#container[data-state="view"] #tilePanes,
#container[data-state="play"] #tilePanes
	//Allow the user to interact with the tilePane
	transform scale3d(1,1,1)
	opacity 1
	pointer-events auto
#container[data-state="view"] #navScrollerWrapper,
#container[data-state="play"] #navScrollerWrapper
	//transform translate3d(0,120px,0)
	opacity 1
	pointer-events auto
#container[data-state="view"] #viewBg,
#container[data-state="view"] #view
	opacity 1
	pointer-events auto
#container[data-state="play"] #game
	opacity 1
	pointer-events auto
#container[data-state="community"] #viewBg,
#container[data-state="community"] #community
	opacity 1
	pointer-events auto

//Handle Modal States
#container[data-modal="login"] #nav,
#container[data-modal="profile"] #nav,
#container[data-modal="feedback"] #nav
	transform translate3d(0,240px,0)