//Handle Application States
#container[data-state="view"],
#container[data-state="play"]
	//We disable pointer events on the container so that the browse page doesn't scroll anymore.
	pointer-events none
#container[data-state="view"] #nav,
#container[data-state="play"] #nav
	//We still want pointer events when the user clicks on the navigation however, so we enable it here.
	pointer-events auto
#container[data-state="view"] #tiles,
#container[data-state="play"] #tiles
	//Prevent the user from accidentally clicking or scrolling the tiles page
	pointer-events none
#container[data-state="view"] #tilePanes,
#container[data-state="play"] #tilePanes
	//Allow the user to interact with the tilePane
	transform scale3d(1,1,1)
	opacity 1
	pointer-events auto
#container[data-state="view"] #navScrollerWrapper,
#container[data-state="play"] #navScrollerWrapper
	//transform translate3d(0,120px,0)
	opacity 1
	pointer-events auto

//Handle Modal States
#container[data-modal="login"] #nav,
#container[data-modal="profile"] #nav,
#container[data-modal="feedback"] #nav
