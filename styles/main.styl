@import 'nib'
@import 'variables'

//Container Styles
#container
	width 100%
	height 100%
	overflow-x hidden
	overflow-y scroll

//Tile Container Styles
#tiles
	width 100%
	height 100%
	padding 90px 10px 10px 10px
	transition opacity normalSpeed
	position relative
	z-index 1
#tilesWrapper
	margin 0 auto
	position relative
#tilesWrapper:after
	content ''
	display table
	clear both

//View Styles
#viewBg
	position fixed
	background-color clouds
	background-position 50% 50%
	//background-attachment fixed
	background-size cover
	background-repeat no-repeat
	top 0
	right 0
	bottom 0
	left 0
	z-index 1
	opacity 0
	transition opacity normalSpeed
	pointer-events none
#view
	width 100%
	height 100%
	position absolute
	top 0
	z-index 2
	opacity 0
	transition opacity normalSpeed
	pointer-events none
#view .tile
	position absolute
	top 50%
	left 50%
	margin -190px 0 0 -200px
#view .tileWrapper
	background-image none!important
#view .tileInfo
	transform translate3d(0,-(tileHeight - (tileInfoHeaderHeight + 20)),0)
#view .tileInfoContent
	opacity 1
.scrollIndicator
	width scrollIndicatorWidth
	height scrollIndicatorHeight
	background red
	absolute bottom 40px left 50%
	margin-left -(scrollIndicatorWidth/2)
	cursor pointer
	opacity 0

//Game Styles
#game
	position fixed
	top 0
	right 0
	bottom 0
	left 0
	z-index 1
	opacity 0
	transition opacity normalSpeed
	pointer-events none
	background clouds
#gameWrapper
	position absolute
	top 80px
	right 0
	bottom 0
	left 0
#gamePlayer
	width 100%
	height 100%

//Community Styles
#community
	position absolute
	top 0
	right 0
	left 0
	z-index 3
	opacity 0
	transition opacity normalSpeed
	pointer-events none
	padding 0 0 20px 0
#communityWrapper
	padding 90px 10px 0 10px
	margin 0 auto
#messages
	float left
	width 100%
	min-height 100px
	background clouds
	color midnightBlue
	//padding 0 0 100px 0
.noMessagesNotice
	text-align center
	height 100px
	width 600px
	font-size 42px
	line-height 100px
	text-shadow none
	margin 0 auto