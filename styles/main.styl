		width 4000px

//Messages Styles
#messages
	position fixed
	top 380px
	right 0
	bottom 0
	left 0
	z-index 101
	background clouds
	color midnightBlue
	perspective 100px
	perspective-origin 50% 50%
	perspective-origin 0 0
	transform-style flat
	display none

.messagesContainer
	position absolute
	top 0
	right 0
	bottom 100px
	left 0
	overflow-x hidden
	overflow-y scroll

.noMessagesNotice
	text-align center
	height 42px
	width 600px
	font-size 42px
	position absolute
	top 50%
	left 50%
	margin -21px 0 0 -300px

//tilePage Styles
#tilePage
	position fixed
	top 0
	right 0
	bottom 0
	left 0
	z-index 1
	transform scale3d(0,0,0)
	opacity 0
	transition transform normalSpeed, opacity normalSpeed
	pointer-events none

#tilePageWrapper
	position absolute
	top 0
	right 0
	bottom 0
	left 0
	background-size cover
	background-repeat no-repeat
	background-position 50% 50%
	color clouds
	text-shadow 0 1px 1px midnightBlue
#tilePageName
	position absolute
	bottom 300px
	left 0
	right 0
	height 80px
	font-size 40px
	line-height 40px
	padding 20px
	opacity 0.9
#tilePageDescription
	position absolute
	right 0
	bottom 80px
	left 0px
	height 220px
	padding 20px
	opacity 0.9

