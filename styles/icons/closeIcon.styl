@import 'nib'
@import '../variables'

.closeIcon
	height 100%
	width 100%
	opacity 0.5
	-webkit-user-select none
.no-touch .closeIcon:hover
	opacity 1
.closeIconBorder
	fill midnight
.closeIconLeftLine
	fill none
	stroke midnight
	stroke-width 6px
	stroke-miterlimit 10
.closeIconRightLine
	fill none
	stroke midnight
	stroke-width 6px
	stroke-miterlimit 10