@import 'nib'
@import '../palette'

//Text Entry Box Styles
.textEntryBox
	background darkGrey
	max-width 600px
	min-height 80px
	height 80px
	max-height 80px
	border-radius 3px
	position relative
	margin 20px auto
.textEntryForm
	width 100%
	height 100%
.textEntryText
	position absolute
	top 10px
	right 90px
	bottom 10px
	left 10px
	padding 10px
	border none
	background offWhite
	border-top-left-radius 3px
	border-bottom-left-radius 3px
.textEntrySubmit
	position absolute
	width 80px
	top 10px
	right 10px
	bottom 10px
	border none
	margin 0
	background offWhite
	border-top-right-radius 3px
	border-bottom-right-radius 3px
	cursor pointer