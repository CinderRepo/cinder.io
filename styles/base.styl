@import 'nib'
@import 'palette'

*
	box-sizing border-box
html
	position absolute
	top 0
	right 0
	bottom 0
	left 0
body
	margin 0
	overflow-x hidden
	overflow-y scroll
	background darkestGrey
	position absolute
	top 0
	right 0
	bottom 0
	left 0
	perspective 0
	transform-style flat
	transform translateZ(-999999px)
	perspective-origin 50% 50%
input, button
	margin 0
	border none
input:focus
	outline none