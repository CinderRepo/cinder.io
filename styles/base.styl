@import 'nib'
@import 'palette'

*
	box-sizing border-box
html
	position absolute
	top 0
	right 0
	bottom 0
	left 0
body
	margin 0
	overflow-x hidden
	overflow-y scroll
	background darkestGrey
	position absolute
	top 0
	right 0
	bottom 0
	left 0
	perspective 0
	transform-style flat
	transform translateZ(-999999px)
	perspective-origin 50% 50%
	font-family 'Play', sans-serif
input, button
	margin 0
	border none
inputfocus
	outline none

//Fonts
@font-face
	font-family 'Play'
	font-style normal
	font-weight 300
	src local('Play'), url('/fonts/IkErdnKw9ItVkLeeur9GHfesZW2xOQ-xsNqO47m55DA.woff') format('woff')
@font-face
	font-family 'Play'
	font-style normal
	font-weight 700
	src local('Play-Bold'), url('/fonts/aBiGxW3iLixHo08CkkYT9gLUuEpTyoUstqEm5AMlJo4.woff') format('woff')