@import 'nib'
@import '../variables'

//Message Styles
.message
	min-height 100px
	position relative
	background white
	padding 20px 40px 20px 80px
	border-radius 3px
	color midnightBlue
	text-shadow none
	max-width 800px
	margin 20px auto
.message:last-child
	margin-bottom 100px
.messageWrapper
	border-radius 3px
	background white
.messageAuthor
	position absolute
	left 10px
	top 65px
	height 20px
	line-height 20px
	width 60px
	text-align center
.messageAuthorAvatar
	background url('http://placekitten.com/g/40/40')
	background-position 50% 50%
	background-size cover
	height 40px
	width 40px
	border-radius 60px
	position absolute
	top 20px
	left 20px
.messageContentText
	display block
	width 100%
	height 100%
	overflow hidden
