@import 'nib'
@import '../palette'

//Message Styles
.message
	//max-width 600px
	min-height 80px
	position relative
	margin 20px 0 0 0
	background darkerGrey
	padding 10px 10px 10px 70px
	border-radius 3px
	color lighterGrey
.messageAuthor
	//background blue
	position absolute
	left 0
	top 55px
	height 20px
	line-height 20px
	width 60px
	text-align center
.messageAuthorAvatar
	background url('http://placekitten.com/g/40/40')
	background-position 50% 50%
	background-size cover
	height 40px
	width 40px
	border-radius 60px
	position absolute
	top 10px
	left 10px
.messageContent
	display block
	width 100%
	height 100%
	overflow hidden
