@import 'nib'
@import '../palette'

//Message Styles
.message
	min-height 80px
	position relative
	background concrete
	padding 10px 10px 10px 70px
	border-radius 3px
	color clouds
	max-width 800px
	margin 20px auto
.message:after
	content ''
	position absolute
	top 0
	right 0
	bottom -5px
	left 0
	z-index -1
	background asbestos
	border-radius 3px
.messageWrapper
	position absolute
	top 0
	right 0
	bottom 0
	left 0
	border-radius 3px
	background concrete
.messageAuthor
	//background blue
	position absolute
	left 0
	top 55px
	height 20px
	line-height 20px
	width 60px
	text-align center
.messageAuthorAvatar
	background url('http://placekitten.com/g/40/40')
	background-position 50% 50%
	background-size cover
	height 40px
	width 40px
	border-radius 60px
	position absolute
	top 10px
	left 10px
.messageContent
	display block
	width 100%
	height 100%
	overflow hidden
