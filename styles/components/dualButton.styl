@import 'nib'
@import '../variables'

//Dual Button Styles
.dualButton
	width dualButtonWidth
	height dualButtonHeight
	margin 0 auto
	position relative
	transform scale3d(0.1,0.1,0.1)
	opacity 0
	transition opacity normalSpeed, transform normalSpeed
	pointer-events none
.dualButton[data-state="active"]
	transform scale3d(1,1,1)
	opacity 1
	pointer-events auto
.innerDualButton
	width (dualButtonWidth/2)
	height dualButtonHeight
	background midnight90
	position absolute
	text-align center
.innerDualButton.left
	left 0
	border-radius radius 0 0 radius
.innerDualButton.right
	right 0
	border-radius 0 radius radius 0
.innerDualButtonText
	width (dualButtonWidth/2)
	height dualButtonHeight
	padding 0 20px 0 20px
	position absolute
	transform scale3d(0.1,0.1,0.1)
	opacity 0
	transition opacity fastSpeed, transform fastSpeed
	pointer-events none
	overflow ellipsis
	color clouds
	line-height dualButtonHeight
	cursor pointer
.innerDualButtonText[data-state="active"]
	transform scale3d(1,1,1)
	opacity 1
	pointer-events auto
.no-touch .innerDualButtonText:hover
	color radiantBlue
.middleButton
	width middleButtonWidth
	height middleButtonHeight
	padding 2px
	background offWhite90
	absolute top 5px left 50%
	z-index 1
	margin 0 0 0 (-(middleButtonWidth/2))
	border-radius middleButtonWidth
	overflow hidden
	pointer-events none
.middleButton .cinderIconWrapper
	width middleButtonWidth - 4
	height middleButtonHeight - 4
	border-radius middleButtonHeight - 4
	position relative
.middleButton .cinderIcon
	width 18px
	height 20px
	position absolute
	top 2px
	left 4px
.middleButton .cinderIconOuterRung
	fill offWhite90
.middleButton .cinderIconInnerRung
	fill offWhite90
.middleButton .avatar
	width middleButtonWidth - 4
	height middleButtonHeight - 4
	background-color midnight90
	background-size cover
	border-radius middleButtonHeight
	position absolute
	transform scale3d(0.1,0.1,0.1)
	opacity 0
	transition opacity fastSpeed, transform fastSpeed
	pointer-events none
.middleButton .avatar[data-state="active"]
	transform scale3d(1,1,1)
	opacity 1
.middleButton .avatarIcon
	width middleButtonWidth - 4
	height middleButtonHeight - 4
.middleButton .avatar.default
	background-color transparent