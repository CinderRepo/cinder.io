@import 'nib'
@import '../variables'

//Dual Button Styles
.dualButton
	width dualButtonWidth
	height dualButtonHeight
	margin 0 auto
	position relative
.innerDualButton
	width (dualButtonWidth/2)
	height dualButtonHeight
	background steelBlue
	position absolute
	line-height dualButtonHeight
	text-align center
	color clouds
	cursor pointer
.innerDualButton:hover
	background ironBlue
.innerDualButton.left
	left 0
	border-radius radius 0 0 radius
.innerDualButton.right
	right 0
	border-radius 0 radius radius 0
.middleButton
	width middleButtonWidth
	height middleButtonHeight
	background ironBlue
	absolute top 5px left 50%
	z-index 1
	margin 0 0 0 (-(middleButtonWidth/2))
	border-radius middleButtonWidth
.middleButton .cinderIcon
	height 22px
	width 16px
	position absolute
	top 3px
	left 7px
.middleButton .cinderIcon .outerRung
	fill clouds
.middleButton .cinderIcon .innerRung
	fill clouds