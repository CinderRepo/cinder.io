@import 'nib'
@import '../variables'

explainerIconHeight = 380px
explainerGutterHeight = 50px
explainerButtonHeight = 50px

#explainer
	background clouds
	height 100%
	opacity 0
	pointer-events none
	position fixed
	top 0
	right 0
	bottom 0
	left 0
	z-index 1
	overflow hidden
#explainerIconsWrapper
	height explainerIconHeight
	min-width tileWidth - 20
	max-width tileWidth - 20
	position relative
	margin 0 auto explainerGutterHeight auto
#explainer .installFireIcon
	height explainerIconHeight
	min-width tileWidth - 20
	max-width tileWidth - 20
	position absolute
	top 0
#explainer .waitingIcon
	display block
	height explainerIconHeight
	min-width tileWidth - 20
	max-width tileWidth - 20
	position absolute
	top 0
#explainer .folderIcon
	display block
	height explainerIconHeight
	min-width tileWidth - 20
	max-width tileWidth - 20
	position absolute
	top 0
#explainer .newIcon
	display block
	height explainerIconHeight
	min-width tileWidth - 20
	max-width tileWidth - 20
	position absolute
	top 0
#explainer .deployIcon
	display block
	height explainerIconHeight
	min-width tileWidth - 20
	max-width tileWidth - 20
	position absolute
	top 0
#explainer .ideaIcon
	display block
	height explainerIconHeight
	min-width tileWidth - 20
	max-width tileWidth - 20
	position absolute
	top 0
#explainerText
	min-width tileWidth - 20
	max-width tileWidth - 20
	margin 0 auto explainerGutterHeight auto
	font-size 24px
#explainerButton
	height explainerButtonHeight
	min-width tileWidth - 20
	max-width tileWidth - 20
	margin 0 auto explainerGutterHeight auto
	background steelBlue
	font-size 20px
	line-height explainerButtonHeight
	text-align center
	color clouds
	border-radius radius
	cursor pointer
.no-touch #explainerButton:hover
	background ironBlue
#explainerProgressWrapper
	height 40px
	width 100%
	overflow hidden
	text-align center
#explainerProgress
	height inherit
	list-style none
	padding 10px 0 10px 0
	margin 0
.explainerProgressDot
	background ironBlue
	height 20px
	width 20px
	border-radius 20px
	display inline-block
	margin 0 10px 0 0
	cursor pointer
.explainerProgressDot:hover
	background steelBlue
.explainerProgressDot:last-child
	margin 0 0 0 0