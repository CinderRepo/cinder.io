@import 'nib'
@import '../palette'

//Tile Styles
.tileWrapper
	-webkit-touch-callout none
	-webkit-user-select none
	position absolute
	transition opacity slowSpeed
	transform-style flat
	backface-visiblity hidden
	transform-origin center
	width 400px
	height 360px
	opacity 1
	z-index 99
.tile
	height 360px
	position relative
	margin 10px
	background alizarin
	border-radius 3px
.tileContainer
	height inherit
	width inherit
	position relative
.tileContainer:after
	content ''
	position absolute
	top 0
	right 0
	bottom -5px
	left 0
	z-index -1
	border-radius 3px
	background alizarin
.tileContent
	height 300px
	overflow hidden
	cursor pointer
	list-style none
	background-repeat no-repeat
	background-size cover
	background-position 50% 50%
	position relative
	z-index 1
	pointer-events auto
	border-top-left-radius 3px
	border-top-right-radius 3px
.tileInfo
	position absolute
	right 0
	left 0
	bottom 0
	z-index 0
	padding 0 20px 0 20px
	line-height 60px
	height 60px
	font-size 24px
	color clouds
	border-bottom-left-radius 3px
	border-bottom-right-radius 3px

