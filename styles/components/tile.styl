.tileContainer
	height inherit
	width inherit
	position relative
.tileContent
	height inherit
	overflow hidden
	cursor pointer
	list-style none
	background-repeat no-repeat
	background-size cover
	background-position 50% 50%
	position relative
	z-index 1
	border-top-left-radius 3px
	border-top-right-radius 3px
.tileInfo
	position absolute
	top 0
	right 0
	left 0
	z-index 1
	padding 0 20px 0 20px
	height 140px
	color clouds
	transform translate3d(0,300px,0)
	transition opacity normalSpeed, transform normalSpeed
.tile:hover .tileInfo
	opacity 0.9
	transform translate3d(0,220px,0)
.tileName
	line-height 60px
	height 50px
	font-size 24px
	overflow hidden
	white-space nowrap
	text-overflow ellipsis
	text-shadow 0 1px 1px midnightBlue
.tileDescription
	width inherit
	height 80px
	overflow hidden
	opacity 0
	transition opacity normalSpeed
.tile:hover .tileDescription
	opacity 1

