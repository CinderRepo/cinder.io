@import 'nib'
@import '../palette'

//Tile Styles
.tileWrapper
	-webkit-touch-callout none
	-webkit-user-select none
	width 20%
	position relative
	background transparent
	transition opacity slowSpeed, height slowSpeed, width slowSpeed
.tileWrapper.preview[data-state="expanded"]
	opacity 1
	height 280px
	//height 400px
.tileWrapper[data-state="expanded"] .tileContent
	margin 10px -10px 0 -10px
.tileWrapper[data-state="collapsed"]
	height 150px
.tileWrapper[data-state="hidden"]
	opacity 0
	height 0
	overflow hidden
	pointer-events none
.tileWrapper.preview
	width 100%
	height 300px
	z-index 2
.tileWrapper.preview .tileContent
	height 280px
	opacity 1
.tile
	width 100%
	height 100%
.tileContent
	margin 10px
	height 130px
	cursor pointer
	list-style none
	background-repeat no-repeat
	background-size cover
	background-position 50% 50%
	position relative
	box-shadow 0 0 2px darkShadow
	transition height slowSpeed, margin-right slowSpeed, margin-left slowSpeed
.tileContentafter
	content ''
	position absolute
	top 0
	right 0
	bottom 0
	left 0
	border 1px solid rgba(255,255,255,0.1)
	border-bottom 0
	background-origin border-box
	background linear-gradient(top left, 50% rgba(255,255,255,0.10), rgba(255,255,255,0))
.tileInfo
	position absolute
	right 0
	left 0
	bottom 0
	background-color rgba(0,0,0,0.45)
	padding 10px
	color white
	line-height 15px
.button[data-state="view"]
	opacity 0
	pointer-events none
	transition opacity slowSpeed
	position absolute
	right 10px
	bottom 45px
	z-index 99
.button[data-state="play"]
	position absolute
	top 80px
	left 50%
	margin-left -50px
	width 100px
	min-height 100px
	border-radius 100px
	line-height 100px
	background rgba(0,0,0,0.4)
.tileWrapper.preview[data-state="expanded"] .button[data-state="view"]
	opacity 0
.tileWrapper.preview .button[data-state="view"]
	pointer-events auto
	opacity 1

