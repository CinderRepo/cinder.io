@import 'nib'
@import '../variables'

//Tile Styles
.tileWrapper
	-webkit-touch-callout none
	-webkit-user-select none
	transition opacity slowSpeed
	transform-style flat
	backface-visiblity hidden
	transform-origin center
	width 400px
	height 380px
	opacity 1
	z-index 99
	float left
	position relative
.tile
	height 360px
	position relative
	margin 10px
	border-radius 3px
	box-shadow 0 0 1px 0 rgba(0,0,0,0.3)
//Tile Drop Shadow
.tile:before
	content ''
	position absolute
	top 0
	right 0
	bottom -5px
	left 0
	z-index -1
	border-radius 3px
