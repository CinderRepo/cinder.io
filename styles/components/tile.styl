@import 'nib'
@import '../variables'

//Tile Styles
.tile
	float left
	width tileWidth
	height tileHeight
	cursor pointer
.tileWrapper
	width tileWidth - 20
	height tileHeight - 20
	overflow hidden
	background-position 50% 50%
	background-size cover
	position relative
	margin 0 10px 0 10px
.tileWrapper:after
	content ''
	position absolute
	top 0
	right 0
	bottom 0
	left 0
	z-index 1
	pointer-events none
	box-shadow inset 0 0 1px midnight30
.tileInfo
	height tileHeight - 20
	background offWhite90
	position absolute
	top (tileHeight - (tileInfoHeaderHeight + 20))
	right 0
	left 0
	color midnight
	transition transform fastSpeed
	transform translate3d(0,0,0)
.tileInfoHeader
	height tileInfoHeaderHeight
	padding 0 20px 0 20px
	font-size 30px
	line-height tileInfoHeaderHeight
	overflow ellipsis
.tileInfoSubheader
	height (tileInfoHeaderHeight/2)
	position absolute
	top 0
	right 0
	left 0
	overflow ellipsis
	font-size 18px
	line-height (tileInfoHeaderHeight/2)
	padding 0 20px 0 20px
.tileInfoContent
	position absolute
	top 45px
	right 0
	bottom 0
	left 0
	opacity 0
	transition opacity fastSpeed
.tileInfoTextWrapper
	position absolute
	top 30px
	right 0
	bottom 80px
	left 0
	padding 5px 20px 20px 20px
	font-size 14px
	opacity 0.7
.tileInfoButtons
	height tileInfoButtonHeight
	position absolute
	right 0
	bottom 0
	left 0
.tileInfoButton
	height tileInfoButtonHeight
	width ((tileWidth - 20)/2)
	background midnight90
	position absolute
	top 0
	font-size 24px
	line-height tileInfoButtonHeight
	text-align center
	color clouds
.tileInfoButton.left
	left 0
.tileInfoButton.right
	right 0

//Hover States
.no-touch .tileWrapper:hover .tileInfo
	transform translate3d(0,-(tileHeight - (tileInfoHeaderHeight + 20)),0)
.no-touch .tileWrapper:hover .tileInfoContent
	opacity 1
.no-touch .tileInfoButton:hover
	color radiantBlue

//Message Tile
.tileHeader
	width 100%
	height tileHeaderIconHeight + 40 //Padding
	position relative
	color midnight
.tileHeaderIcon
	width tileHeaderIconWidth
	height tileHeaderIconHeight
	border-radius tileHeaderIconWidth
	absolute top 20px left 20px
	background steelBlue
.tileHeaderTitle
	height 30px
	position absolute
	top 20px
	right 20px
	left 90px
	font-size 24px
	line-height 30px
	overflow ellipsis
.tileHeaderSubtitle
	height 20px
	position absolute
	top 50px
	right 20px
	left 90px
	font-size 14px
	line-height 20px
	overflow ellipsis

//Create Tile
.tile.create .tileWrapper
	border 1px dashed steelBlue50
.tile.create .tileHeaderTitle,
.tile.create .tileHeaderSubtitle
	opacity 0.5