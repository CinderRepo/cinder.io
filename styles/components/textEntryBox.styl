@import 'nib'
@import '../palette'

//Text Entry Box Styles
.textEntryBox
	background peterRiver
	height 100px
	position fixed
	right 0
	bottom 0
	left 0
	z-index 99
	color midnightBlue
.textEntryBox:after
	content ''
	position absolute
	top 0
	right -10px
	bottom -10px
	left -10px
	box-shadow inset 0 0 3px 0 midnightBlue
	pointer-events none
.textEntryForm
	position absolute
	top 0
	right 0
	bottom 0
	left 50%
	max-width 800px
	margin-left -400px
	height inherit
.textEntryText
	position absolute
	top 20px
	right 70px
	bottom 20px
	left 0
	padding 20px
	line-height 20px
	font-size 14px
	border none
	background offWhite
	border-top-left-radius 3px
	border-bottom-left-radius 3px
//Remove Webkit outlines
.textEntryText:focus
	outline none
//Customized placeholder text
.textEntryText::-webkit-input-placeholder
	color midnightBlue
.textEntryText::-moz-placeholder
	color midnightBlue
.textEntryText:-ms-input-placeholder
	color midnightBlue
.textEntrySubmit
	position absolute
	width 80px
	top 20px
	right 0
	bottom 20px
	border none
	margin 0
	background offWhite
	border-top-right-radius 3px
	border-bottom-right-radius 3px
	cursor pointer
.loginNotice
	display block
	text-align center
	line-height 100px
	font-size 24px
	color clouds