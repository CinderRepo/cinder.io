@import 'nib'
@import '../variables'

//Text Entry Box Styles
.textEntryBox
	height 100px
	color midnight70
.textEntryForm
	position relative
	height inherit
	margin 10px 20px 10px 20px
	background clouds90
.textEntryText
	width 100%
	height 100%
	padding 20px
	line-height 20px
	font-size 14px
	border none
	background transparent
	border 1px dashed rgba(84,96,110,0.5)
.textEntryText:focus
	outline none
.textEntryText::-webkit-input-placeholder
	color midnight70
.textEntryText::-moz-placeholder
	color midnight70
.textEntryText:-ms-input-placeholder
	color midnight70
.textEntrySubmit
	position absolute
	width 80px
	top 20px
	right 0
	bottom 20px
	border none
	margin 0
	background white
	border-top-right-radius 3px
	border-bottom-right-radius 3px
	cursor pointer
	display none
.loginNotice
	display block
	text-align center
	line-height 100px
	font-size 24px
	color clouds