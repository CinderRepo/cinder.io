@import 'nib'
@import '../palette'

//Button Styles
.button
	display inline-block
	min-height 30px
	height 30px
	line-height 30px
	max-height 30px
	min-width 30px
	text-align center
	background darkGrey
	color offWhite
	border-radius 3px
	cursor pointer
	border none
	margin 0

//Button States
.button.muted
	opacity 0.4
.button.default
	opacity 0.6
.button.hover
	opacity 0.8
.button.active
	opacity 1.0

//Content Viewer Button Styles
.button.contentViewer
	max-width 30px
	border-radius 0
.button.contentViewer.preview
	background purple
.button.contentViewer.image
	background yellow
.button.contentViewer.music
	background orange
.button.contentViewer.video
	background aqua
.button.contentViewer.code
	background teal
.button.contentViewer.analytics
	background lime
.button.contentViewer.remixes
	background blue
.button.contentViewer.play
	background brown

//Select Files Button Styles
.button.selectFiles
	background teal

//Cancel Button Styles
.button.cancel
	background orange

//Confirm Button Styles
.button.confirm
